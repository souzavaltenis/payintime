<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="EditTextStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHint">@color/text</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/style_edit</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:elevation">4dp</item>
        <item name="android:ems">10</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/style_button</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">4dp</item>
        <item name="android:ems">10</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="ButtonProfileStyle" parent="@android:style/TextAppearance.Small">
        <item name="android:fontFamily">@font/roboto_black</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textColorHint">@color/text</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/style_button_profile</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:elevation">4dp</item>
        <item name="android:ems">10</item>
        <item name="android:padding">5dp</item>
    </style>

</resources>